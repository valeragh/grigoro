= form_for @template do |f|
  - if @template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@template.errors.count, "error")} prohibited this cow from being saved:"
      %ul
        - @template.errors.full_messages.each do |msg|
          %li= msg

  .field
  = f.label :name
  = f.text_field :name
  = f.label :description
  = f.text_area :description, size: '40x6'
  .actions
    = f.submit 'Save'