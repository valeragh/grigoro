%h1 Listing Categories

%table
  %tr
    %th Name
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= link_to 'Show', template_category_path(@template, category)
      %td= link_to 'Edit', edit_template_category_path(@template, category)
      %td= link_to 'Destroy', template_category_path(@template, category), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br= link_to 'Create New Category', new_template_category_path

%br= link_to 'Back to Template', @template